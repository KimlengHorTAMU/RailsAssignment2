<p style="color: green"><%= notice %></p>

<h1>Movies</h1>

<div id="movies">
  <%= form_tag movies_path, :method => 'get' do %>
    <%= collection_select :rating, :filter, Movie.all.uniq{|mov| mov.rating}, :rating, :rating, prompt: "Select rating"%>
    <%= submit_tag "Filter" %>
  <% end %>
  <% @movies.each do |movie| %>
    <%= render movie %>
    <p>
      <%= link_to "Show this movie", movie %>
    </p>
  <% end %>
</div>

<%= link_to "New movie", new_movie_path %>
